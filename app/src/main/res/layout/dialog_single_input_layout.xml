<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:ignore="ContentDescription,GradleDependency,RtlHardcoded,RtlSymmetry,SpUsage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_10"
        android:layout_marginTop="@dimen/size_30"
        android:gravity="center_horizontal"
        android:text="@string/keyword_input"
        android:textColor="@color/text_color"
        android:textSize="@dimen/size_17" />

    <com.zxycloud.zxwl.widget.MultifunctionalEditText
        android:id="@+id/gateway_id_input"
        style="@style/edit_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_padding"
        android:background="@drawable/corner_gray_4_hollow"
        android:hint="@string/gateway_id_hint"
        android:inputType="text"
        android:paddingBottom="@dimen/size_5"
        android:paddingLeft="@dimen/size_8"
        android:paddingTop="@dimen/size_5" />

    <include layout="@layout/horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/size_15"
            android:text="@string/cancel"
            android:textColor="@android:color/black"
            android:textSize="@dimen/size_17" />

        <View
            android:id="@+id/dialog_middle_line"
            android:layout_width="@dimen/line_height"
            android:layout_height="match_parent"
            android:background="@color/color_ccc" />

        <TextView
            android:id="@+id/dialog_confirm"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/size_15"
            android:text="@string/confirm"
            android:textColor="@color/green"
            android:textSize="@dimen/size_17" />
    </LinearLayout>
</LinearLayout>
