<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_time"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/common_padding"
    tools:ignore="SpUsage">

    <TextView
        android:id="@+id/info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_10"
        android:textColor="@color/text_color"
        android:textSize="@dimen/size_17" />

    <TextView
        android:id="@+id/info_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/size_10"
        android:layout_toEndOf="@+id/info_name"
        android:layout_toRightOf="@+id/info_name"
        android:gravity="end"
        android:textColor="@color/green"
        android:textSize="@dimen/size_17" />

    <TextView
        android:id="@+id/info_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_name"
        android:textColor="@color/color_999"
        android:textSize="@dimen/size_15" />

    <TextView
        android:id="@+id/info_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/info_state"
        android:layout_toEndOf="@+id/info_user"
        android:layout_toRightOf="@+id/info_user"
        android:gravity="end"
        android:textColor="@color/color_999"
        android:textSize="@dimen/size_15" />
</RelativeLayout>
