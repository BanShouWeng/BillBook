<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/common_padding"
    tools:context=".ui.fragment.WarehousingFragment"
    tools:ignore="HardcodedText,SpUsage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/size_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:drawableLeft="@mipmap/icon_star"
            android:drawablePadding="@dimen/size_5"
            android:drawableStart="@mipmap/icon_star"
            android:gravity="center_vertical"
            android:text="入库时间："
            android:textSize="@dimen/size_17" />

        <TextView
            android:id="@+id/info_time_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:hint="请选择时间"
            android:textSize="@dimen/size_17" />
    </LinearLayout>

    <include layout="@layout/include_devider_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:drawableLeft="@mipmap/icon_star"
            android:drawablePadding="@dimen/size_5"
            android:drawableStart="@mipmap/icon_star"
            android:gravity="center_vertical"
            android:text="配件类型："
            android:textSize="@dimen/size_17" />

        <TextView
            android:id="@+id/info_type_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:color/white"
            android:hint="请选择类型"
            android:textSize="@dimen/size_17" />
    </LinearLayout>

    <include layout="@layout/include_devider_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:drawableLeft="@mipmap/icon_star"
            android:drawablePadding="@dimen/size_5"
            android:drawableStart="@mipmap/icon_star"
            android:gravity="center_vertical"
            android:text="入库数量："
            android:textSize="@dimen/size_17" />

        <EditText
            android:id="@+id/info_count_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:color/white"
            android:hint="请输入入库数量"
            android:inputType="number" />
    </LinearLayout>

    <include layout="@layout/include_devider_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:drawableLeft="@mipmap/icon_star"
            android:drawablePadding="38dp"
            android:drawableStart="@mipmap/icon_star"
            android:gravity="center_vertical"
            android:text="单价："
            android:textSize="@dimen/size_17" />

        <EditText
            android:id="@+id/info_price_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:color/white"
            android:hint="请输入单价"
            android:inputType="number" />
    </LinearLayout>

    <include layout="@layout/include_devider_layout" />

</LinearLayout>